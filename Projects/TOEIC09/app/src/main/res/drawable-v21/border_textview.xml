<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- View background color -->
    <solid
        android:color="#8c09b1" >
    </solid>

    <!-- View border color and width -->
    <stroke
        android:width="0dp"
        android:color="#940699" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="0dp"   >
    </corners>
    <gradient
        android:endColor="#23002d"
        android:angle="90"
        android:startColor="#da9e9d9d"></gradient>

</shape>