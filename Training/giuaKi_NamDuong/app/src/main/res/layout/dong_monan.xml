<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >


<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/lvrow"
    android:weightSum="10">
    <LinearLayout

        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/borderimg"
            android:src="@drawable/icupload"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/imMonAn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="8dp"
        android:layout_weight="4.5"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTenMon"
            android:text="Ten Mon"
            android:textSize="23sp"
            android:textColor="#077a8c"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvGia"
            android:text="Gia Mon"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_margin="10dp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="25dp"
            android:src="@drawable/ic_edit"
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/edit"
            android:layout_marginBottom="10dp"
            android:layout_height="25dp" />
        <ImageButton
            android:layout_width="25dp"
            android:src="@drawable/ic_del"
            android:background="@null"
            android:scaleType="fitXY"
            android:id="@+id/delete"
            android:layout_height="25dp" />
    </LinearLayout>

</LinearLayout>
</LinearLayout>