<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nguyendoanh.sqlite.UpdateActivity">

    <ImageView
        android:id="@+id/imageview2"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="177dp"
        android:layout_height="170dp"
        android:src="@drawable/image" />
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnChonhinh"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/designbutton"
            android:text="Choose" />

        <Button
            android:id="@+id/btnChuphinh"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:background="@drawable/designbutton"
            android:text="Capture" />
    </LinearLayout>
    <EditText
        android:layout_gravity="center"
        android:id="@+id/editTextUpdateGiay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Input shoes brand"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText

        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/edittextUpdateMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:hint="Price"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="143dp" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/designbutton"
            android:id="@+id/buttonLuu"
            android:layout_width="136dp"
            android:layout_height="38dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Save" />

        <Button
            android:gravity="center"
            android:background="@drawable/designbutton"

            android:id="@+id/buttonCancel"
            android:text="Cancel"
            android:layout_width="136dp"
            android:layout_height="38dp" />
    </LinearLayout>


</LinearLayout>
